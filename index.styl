:root, input
  background: black
  color: white
  --height-color: magenta
  --size-color: cyan
a, a:visited
  color: yellow
a:hover, a:active
  color: white

#app
  position: absolute
  inset: 0
  z-index: -1

form
  background: transparent
#command
  width: 10rem

#about
  position: absolute
  right: 0.5rem
  bottom: 0.5rem

svg
  width: 100%
  height: 100%
line
  stroke: #ccc
  stroke-width: 5
  stroke-linecap: round
  &.bad
    stroke: red
text
  fill: white
  text-anchor: middle
  &.key
    dominant-baseline: hanging
  &.height
    dominant-baseline: middle
    fill: var(--height-color)
  &.size
    fill: var(--size-color)
  font-family: sans-serif
  font-size: 32px
g.bad
  text
    fill: red

label.height
  color: var(--height-color)
label.size
  color: var(--size-color)

:root:not(.height) text.height
  display: none
:root:not(.size) text.size
  display: none
