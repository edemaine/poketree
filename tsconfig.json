{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2021", "dom"],
    "target": "es2015",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "nodenext"
    }
  }
}
