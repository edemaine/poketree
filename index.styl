:root, input
  background: black
  color: white

#app
  position: absolute
  inset: 0
  z-index: -1

#command
  width: 10rem

svg
  width: 100%
  height: 100%
line
  stroke: #ccc
  stroke-width: 5
  &.bad
    stroke: red
text
  fill: white
  text-anchor: middle
  dominant-baseline: hanging
  font-family: sans-serif
  font-size: 32px
g.bad
  text
    fill: red
